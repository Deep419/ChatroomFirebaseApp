<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewMessage"
        android:layout_width="311dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="13dp" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textViewMessage"
        android:layout_marginTop="60dp" />

    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textViewName"
        android:layout_marginEnd="21dp" />

    <ImageButton
        android:id="@+id/imageButtonDeleteMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textViewTime"
        android:layout_alignTop="@+id/textViewMessage"
        android:background="@null"
        android:src="@android:drawable/ic_menu_delete"
        android:tint="@android:color/black" />

</RelativeLayout>